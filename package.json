{
  "name": "autodate",
  "version": "1.0.0",
  "description": "Automatically update copyright years in website footers.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --watch --dts",
    "build": "tsup src/index.ts --format cjs,esm,iife --minify --dts --clean",
    "test": "vitest run",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "copyright",
    "date",
    "year",
    "footer",
    "automatic",
    "typescript"
  ],
  "author": "titan",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsup": "^8.0.2",
    "vitest": "^1.2.2",
    "prettier": "^3.2.5",
    "eslint": "^8.56.0"
  }
}